<% provide(:title, 'OFFICE-POST') %>

<div class="album py-5 bg-light">
  <div class="container text-center item_selector">
    <h3 class="jumbotron-heading">回答済みご意見一覧</h3>
        <ul class="question_status_list">
          <li class="btn btn-light my-2" data-group="all">全て</li>
          <li class="btn btn-primary my-2" data-group="done">改善しました</li>
          <li class="btn btn-success my-2" data-group="pending">検討中</li>
          <li class="btn btn-secondary my-2" data-group="reject">対応なし</li>
        </ul>
        
  </div>
  <div class="container" id="my_view">
    <div class="row grid">
      <% @questions.each do |question| %>
          <div v-for="issue in issues" class="col-md-4 grid-item" data-group="<%= question.status.eng_name %>">
            <div class="card mb-4 box-shadow">
              <p class="qa_status bg-<%= question.status.eng_name %>"><%= question.status.name %></p>
              <div class="card-body">
                <p class="q_or_a">ご意見 NO. <%= question.id %></p>
                <p class="card-text"><%= question.question %></p>
              </div>
              <div class="card-body">
                <p class="q_or_a">回答</p>
                <p class="card-text"><%= question.answer %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted">更新日 : <%= question.updated_at.strftime('%Y/%m/%d') %></small>
                </div>
              </div>
            </div>
          </div>
          <% end %>
    </div>
  </div>
</div>